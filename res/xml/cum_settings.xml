<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/cum_settings_title" >

        <!-- Status Bar -->
        <com.cum.settings.preferences.CumPreference
            android:key="statusbar_category"
            android:title="@string/statusbar_title"
	    android:summary="@string/statusbar_summary"
            android:fragment="com.cum.settings.fragments.StatusBarSettings"
            android:icon="@drawable/ic_cum_status_settings"/>

        <!-- Quick Settings panel -->
        <com.cum.settings.preferences.CumPreference
            android:key="quicksettings_category"
            android:title="@string/quicksettings_title"
	    android:summary="@string/quicksettings_summary"
            android:fragment="com.cum.settings.fragments.QuickSettings"
            android:icon="@drawable/ic_cum_quick_settings"/>
			
		<!-- Themes -->
        <com.cum.settings.preferences.CumPreference
            android:key="theme_category"
            android:title="@string/theme_title"
	    android:summary="@string/theme_summary"
            android:fragment="com.cum.settings.fragments.ThemeSettings"
            android:icon="@drawable/ic_cum_theme_settings"/>

        <!-- Buttons -->
		<com.cum.settings.preferences.CumPreference
            android:key="button_settings"
            android:title="@string/button_title"
	    android:summary="@string/button_summary"
            android:icon="@drawable/ic_cum_button_settings"
            android:fragment="com.cum.settings.fragments.ButtonSettings"/>
			
		<!-- Animations -->
		<com.cum.settings.preferences.CumPreference
            android:key="animations_category"
            android:title="@string/animations_title"
	    android:summary="@string/animations_summary"
            android:icon="@drawable/ic_cum_animation_settings"
            android:fragment="com.cum.settings.fragments.AnimationsSettings"/>

        <!-- Lock Screen -->
        <com.cum.settings.preferences.CumPreference
            android:key="lockscreen_category"
            android:title="@string/lockscreen_title"
	    android:summary="@string/lockscreen_summary"
            android:fragment="com.cum.settings.fragments.LockScreenSettings"
            android:icon="@drawable/ic_cum_lockscreen_settings"/>

        <!-- Power Menu -->
        <com.cum.settings.preferences.CumPreference
            android:key="powermenu__category"
            android:title="@string/powermenu_title"
	    android:summary="@string/powermenu_summary"
            android:fragment="com.cum.settings.fragments.PowerMenuSettings"
            android:icon="@drawable/ic_cum_power_settings"/>

        <!-- Recents -->
       <!-- <com.cum.settings.preferences.CumPreference
            android:key="recents_category"
            android:title="@string/recents_title"
	    android:summary="@string/recents_summary"
            android:fragment="com.cum.settings.fragments.RecentsSettings"
            android:icon="@drawable/ic_cum_recent_settings_background"/> -->

        <!-- Notifications -->
        <com.cum.settings.preferences.CumPreference
            android:key="notifications_category"
            android:title="@string/notifications_title"
	    android:summary="@string/notifications_summary"
            android:fragment="com.cum.settings.fragments.NotificationSettings"
            android:icon="@drawable/ic_cum_notification_settings"/>

        <!-- Misc -->
        <com.cum.settings.preferences.CumPreference
            android:key="misc_category"
            android:title="@string/misc_title"
	    android:summary="@string/misc_summary"
            android:fragment="com.cum.settings.fragments.MiscSettings"
            android:icon="@drawable/ic_cum_misc_settings"/>

       <!-- About Team -->
       <com.cum.settings.preferences.CumPreference
        android:key="about_category"
        android:title="@string/about_cum"
	android:summary="@string/about_summary"
        android:fragment="com.cum.settings.fragments.About"
        android:icon="@drawable/ic_cum_about_settings" />


        <!-- Device Part -->
        <Preference
            android:key="device_part"
            android:persistent="false"
            android:title="@string/device_part_title"
            android:icon="@drawable/ic_settings_device">
            <intent android:action="android.intent.action.MAIN"
                 android:targetPackage="org.omnirom.device"
                 android:targetClass="org.omnirom.device.DeviceSettings"/>
        </Preference>
</PreferenceScreen>
